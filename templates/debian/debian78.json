{
  "variables":{
      "version": "1.0.0"
  },
  "builders": [
    {
      "vm_name": "debian78",
      "guest_os_type": "Debian_64",
      "type": "virtualbox-iso",
      "headless": true,
      "http_directory": "http",
      "iso_url": "http://cdimage.debian.org/cdimage/release/7.8.0/amd64/iso-dvd/debian-7.8.0-amd64-DVD-1.iso",
      "iso_checksum": "ff9543a5ea691d80a5281ebb21a3fe6e1eba1246",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "ssh_wait_timeout": "10000s",
      "boot_command": [
        "<esc><wait>",
        "install",
        " auto",
        " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " debian-installer=en_US",
        " locale=en_US",
        " keymap=us",
        " netcfg/get_hostname=vagrant",
        " netcfg/get_domain=vm ",
        "<enter>"
      ],
      "disk_size": 8192,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/vbox.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "../../boxes/debian-7.8-amd64-plain-{{user `version`}}.box"
    }
  ]
}
